<!DOCTYPE html>
<html>
<head>
  <title>ExampleApp</title>
  <%= stylesheet_link_tag    "application" %>
  <%= csrf_meta_tags %>

	<script type="text/template" id="album-template">
		<li
	</script>

</head>
<body>
	<header id="title">
	    <h1>SnapShot</h1>
			 <% flash.each do |key, value| -%>
	        <div class="flash <%= key %>"><%= value %></div>
	      <% end -%>
	  </header>

	  <div id="wrapper">
	    <div id="sidebar">
							
	      <h3>Photo Albums</h3>
	      <ul id="albums">
	      </ul>

	      <h3>Options</h3>
	      <ul id="options">
	        <li data-name="settings" class="current">Settings</li>
	      </ul>

	      <h3>Search</h3>
	      <input type="search" results="0" incremental="true" placeholder="Search">
	
	    </div>

	    <div class="vdivide"></div>

	    <div id="content">
	      <div id="messages">
	        <ul class="items">
	        </ul>

	        <div class="new">
	          <textarea></textarea>
	          <button>Send</button>
	        </div>
	      </div>

	      <div id="searches">
	        <h2>Search results: <span class="query"></span></h2>
	        <ul class="items"></ul>
	      </div>

	      <div id="settings" class="active">
	        <h2>Photo Albums</h2>
	        <ul class="channels">
	        </ul>

	        <h2>Create New Album</h2>
	        <div class="createChannel">
	          <form>
	            <input type="text" placeholder="Album Name">
	            <button class="pill">New Album</button>
	          </form>
	        </div>

	        <h2 class="styled_h2">Profile</h2>
					<div>
				    
				  </div>
	      
				</div>
	    </div>
	  </div>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript %>
</body>
</html>
