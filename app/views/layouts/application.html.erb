<!DOCTYPE html>
<html>
<head>
  <title>ExampleApp</title>
  <%= stylesheet_link_tag    "application" %>
  <%= csrf_meta_tags %>

	<script type="text/template" id="album-template">
		<li
	</script>

</head>
<body>
	<header id="title">
	    <h1>SnapShot</h1>
			 <% flash.each do |key, value| -%>
	        <div class="flash <%= key %>"><%= value %></div>
	      <% end -%>
	  </header>

	  <div id="wrapper">
	    <div id="sidebar">
							
	      <h3 class="sidebar_h3">Photo Albums</h3>
	      <ul id="albums">
	      </ul>

	      <h3>Options</h3>
	      <ul id="options">
	        <li id="settings-option" data-name="settings">Settings</li>
	      </ul>

	      <h3>Search</h3>
	      <input type="search" results="0" incremental="true" placeholder="Search">
	
	    </div>

	    <div class="vdivide"></div>
			
	    <div id="content" style="">
	      <div id="messages">
	        <ul class="items">
	        </ul>

	        <div class="new">
	          <textarea></textarea>
	          <button>Send</button>
	        </div>
	      </div>

	      <div id="searches">
	        <h2>Search results: <span class="query"></span></h2>
	        <ul class="items"></ul>
	      </div>

	      <div id="settings" class="active">
	        <h2>Photo Albums</h2>
	        <ul class="channels">
	        </ul>

	        <h2>Create New Album</h2>
	        <div id="createAlbum">
	            <input id="newAlbum" type="text" placeholder="Album Name">
	            <button id="newAlbumBtn" class="pill">New Album</button>
	        </div>

	        <h2 class="">Profile</h2>
					<div>
				    <div id="contents">
					    <div id="header">
					      <% flash.each do |key, value| -%>
					        <div class="flash <%= key %>"><%= value %></div>
					      <% end -%>

					      <% if signed_in? %>
					        <%= current_user.email %>
					        <%= link_to "Sign out", sign_out_path, :method => :delete %>
					      <% else %>
					        <%= link_to "Sign in", sign_in_path %>
					      <% end %>
					    </div>
				  </div>
	      
				</div>
	    </div>
	  </div>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript %>
</body>
</html>
